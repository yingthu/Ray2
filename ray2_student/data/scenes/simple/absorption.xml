<?xml version="1.0" encoding="UTF-8" ?>
<!--  A blue box sitting on a floor.
 -->
<scene>
  <camera type="PerspectiveCamera">
    <viewPoint>0 25 0</viewPoint>
    <viewDir>0 -1 0</viewDir>
    <viewUp>0 0 1</viewUp>
    <projDistance>20</projDistance>
    <viewWidth>4.8</viewWidth>
    <viewHeight>3</viewHeight>
  </camera>
  <image>
    960 600
  </image>
  <shader name="blue" type="Lambertian">
    <diffuseColor>.2 .3 1</diffuseColor>
  </shader>
  <shader name="red" type="Lambertian">
    <diffuseColor>1 .3 .2</diffuseColor>
  </shader>
  <shader name="white" type="Lambertian">
    <diffuseColor>1 1 1</diffuseColor>
  </shader>
  <shader name="glass" type="Glass">
    <refractiveIndex>1</refractiveIndex>
  </shader>

  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.0 0.0 0.0</insideAbsorption>
    <center>1.5 5 1</center>
    <radius>0.4</radius>
  </surface> 
  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.01 0.02 0.03</insideAbsorption>
    <center>0 5 1</center>
    <radius>0.4</radius>
  </surface> 
  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.02 0.04 0.06</insideAbsorption>
    <center>-1.5 5 1</center>
    <radius>0.4</radius>
  </surface> 

  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.04 0.08 0.12</insideAbsorption>
    <center>1.5 5 0</center>
    <radius>0.4</radius>
  </surface> 
  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.08 0.16 0.24</insideAbsorption>
    <center>0 5 0</center>
    <radius>0.4</radius>
  </surface> 
  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.12 0.24 0.36</insideAbsorption>
    <center>-1.5 5 0</center>
    <radius>0.4</radius>
  </surface> 


  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.2 0.4 0.6</insideAbsorption>
    <center>1.5 5 -1</center>
    <radius>0.4</radius>
  </surface> 
  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>0.5 1.0 1.5</insideAbsorption>
    <center>0 5 -1</center>
    <radius>0.4</radius>
  </surface> 
  <surface type="Sphere">
    <shader ref="glass" />
    <insideAbsorption>1 2 3</insideAbsorption>
    <center>-1.5 5 -1</center>
    <radius>0.4</radius>
  </surface> 

  <surface type="Box">
    <shader ref="white" />    
    <minPt>-6 -1.1 -6</minPt>
    <maxPt>6 -1 6</maxPt>
  </surface>    
  <light>
    <position>4 5 -3</position>
    <intensity>1 1 1</intensity>
  </light>
  <light>
    <position>-4 3 5</position>
    <intensity>.7 .7 .7</intensity>
  </light>
</scene>
